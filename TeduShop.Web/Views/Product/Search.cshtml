@model TeduShop.Web.Infrastructure.Core.PaginationSet<TeduShop.Web.Models.ProductViewModel>

@{
    var keyword = (string)ViewBag.Keyword;
    ViewBag.Title = "Kết quả tìm kiếm cho từ khóa: " + keyword;
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="women-product">
    @if (Model.Count > 0)
    {
        <div class=" w_content">
            <div class="women">
                <a href="#"><h4>Kết quả từ khóa: @keyword - <span>@Model.Count sản phẩm</span> </h4></a>
                <ul class="w_nav">
                    <li>Sort : </li>
                    <li><a class="active" href="?page=@Model.Page&sort=popular">popular</a></li> |
                    <li><a href="?page=@Model.Page&sort=new">new </a></li> |
                    <li><a href="?page=@Model.Page&sort=discount">discount</a></li> |
                    <li><a href="?page=@Model.Page&sort=price">price: Low High </a></li>
                    <div class="clearfix"></div>
                </ul>
                <div class="clearfix"> </div>
            </div>
        </div>
        <!-- grids_of_4 -->
        <div class="grid-product">
            @foreach (var product in Model.Items)
            {
                var Url = "/" + product.Alias + ".p-" + product.ID + ".html";
                <div class="  product-grid">
                    <div class="content_box">
                        <a href="@Url">
                            <div class="left-grid-view grid-view-left">
                                <img src="@product.Image" class="img-responsive watch-right" alt="@product.Name" />
                                <div class="mask">
                                    <div class="info">Xem nhanh</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <h4><a href="@Url"> @product.Name</a></h4>
                    <p>@product.Description</p>
                    @(product.Price == 0 ? "Liên hệ" : product.Price.ToString("N2"))
                </div>
            }
            <div class="clearfix"> </div>
            @if (Model.TotalPages > 1)
            {
                var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
                var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li>
                            <a href="?page=@(Model.Page-1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            if (Model.Page == i)
                            {
                                <li class="active"><a href="?page=@i" title="Trang @i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="?page=@i" title="Trang @i">@i</a></li>
                            }

                        }
                        <li>
                            <a href="?page=@(Model.Page+1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            }

        </div>
    }
    else
    {
        <div class="text-center">Không có sản phẩm nào được tìm thấy</div>
    }

</div>

